{
  "name": "realtime-chat-widget",
  "version": "1.0.0",
  "description": "High-performance, real-time chatbot SaaS backend and widget on Cloudflare",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:pages": "wrangler pages deploy public",
    "db:create": "wrangler d1 create chat-messages",
    "db:migrate": "wrangler d1 execute chat-messages --file=./schema.sql",
    "kv:create": "wrangler kv:namespace create CONFIG_KV",
    "type-check": "tsc --noEmit",
    "build": "tsc"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "durable-objects",
    "chatbot",
    "ai",
    "websocket",
    "real-time"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "wrangler": "^3.15.0"
  },
  "dependencies": {}
}
